{
  "name": "CHERI Control Development (GPU Nvidia - Prebuilt)",
  "initializeCommand": "sh -lc 'command -v xhost >/dev/null 2>&1 && xhost +local:root || true'",
  "image": "ghcr.io/zadobudak/cheri_devcons:gpu-latest",
  "runArgs": [
    "--network=host",
    "--device=/dev/dri",
    "--ipc=host",
    "--gpus=all",
    "--runtime=nvidia",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "RTROBOT_DIR": "${containerWorkspaceFolder}/rtrobot"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "cheri"
}


